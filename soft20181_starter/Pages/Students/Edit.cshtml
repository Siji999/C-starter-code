@page
@model soft20181_starter.Pages.Students.EditModel
@{
}

<h1>Edit Student</h1>

@Model.Id

<div class="col-6">
	<form method="post">
		<div class="mb-3">
			<input type="text" class="form-control" asp-for="@Model.TheStudent.Id" readonly>
		</div>
		<div class="mb-3">
			<input type="text" class="form-control" asp-for="@Model.TheStudent.NNumber">
		</div>
		<div class="mb-3">
			<input type="text" class="form-control" asp-for="@Model.TheStudent.Name">
		</div>

		<button type="submit">Update</button>
	</form>
</div>