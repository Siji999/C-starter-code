@page
@model soft20181_starter.Pages.ContactModel
@{
}

<section class="card">
    <form method="post">
        @* <label for="name">Name:</label> *@
        <input asp-for="@Model.ContactInfo.Name" placeholder="Name" type="text" class="form-control" />
        <span asp-validation-for="@Model.ContactInfo.Name" class="text-danger"></span>

        @* <label for="email">Email:</label> *@
        <input asp-for="@Model.ContactInfo.Email" placeholder="Email" type="email" class="form-control" />
        <span asp-validation-for="@Model.ContactInfo.Email" class="text-danger"></span>

        <input asp-for="@Model.ContactInfo.Phone" type="text" placeholder="Phone" class="form-control" />
        <span asp-validation-for="@Model.ContactInfo.Phone" class="text-danger"></span>

        <textarea type="text" class="form-control" asp-for="@Model.ContactInfo.Message" placeholder="Message" row="4"></textarea>
        <span asp-validation-for="@Model.ContactInfo.Message" class="text-danger"></span>

        <button type="submit">Submit</button>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




