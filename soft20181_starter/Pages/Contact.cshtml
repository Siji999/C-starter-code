@page
@model soft20181_starter.Pages.ContactModel
@{
}

<section class="card">
    <form id="contactForm" method="post">
        @* <label for="name">Name:</label> *@
        <input asp-for="@Model.ContactInfo.Name" placeholder="Name" type="text" id="name" name="name" pattern="[A-Za-z ]+" title="Only letters and spaces allowed" required />
        <span asp-validation-for="@Model.ContactInfo.Name"></span>

        @* <label for="email">Email:</label> *@
        <input asp-for="@Model.ContactInfo.Email" placeholder="Email" type="email" id="email" name="email" required />
        <span asp-validation-for="@Model.ContactInfo.Email"></span>

        <input asp-for="@Model.ContactInfo.Phone" type="text" placeholder="Phone" />
        <span asp-validation-for="@Model.ContactInfo.Phone"></span>

        @* <label for="message">Message:</label> *@
        <textarea id="message" name="message" rows="4" required></textarea>

        <button type="button" onclick="validateForm()">Submit</button>
    </form>
</section>

